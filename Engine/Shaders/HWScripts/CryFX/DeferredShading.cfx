	float4   cv_BlendPlane1;
};

vtxOutClipVolume ClipVolumeVS(vtxInLightPrePass IN)
{
	vtxOutClipVolume OUT = (vtxOutClipVolume)0; 

	float4 vPos = IN.Position;
	OUT.HPosition = mul(vPos, cv_mClipVolume);

	return OUT;
