float4 CalcHomogeneousPos(float SceneDepth, float2 WPos)
{
  float4 HPos = vWBasisZ.xyzw + (vWBasisX.xyzw*WPos.x)+(vWBasisY.xyzw*WPos.y);
  HPos.xyzw *= SceneDepth.xxxx;
  return HPos;
}

