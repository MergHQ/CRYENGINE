{
	pixOutClipVolume OUT = (pixOutClipVolume)1;
	return OUT;
}

pixout ClipVolumeBlendValuePS(float4 WPos : SV_POSITION)
{
	pixout OUT = (pixout) 1;

	float fDepthPixel = DepthTex.Load(int3(WPos.xy, 0)).x;
	float fDevDepth = cv_projRatioScreenScale.y / fDepthPixel + cv_projRatioScreenScale.x;
	
	float2 vTC = WPos * cv_projRatioScreenScale.zw;
	float4 vClipPos = float4(vTC.x * 2 - 1, 1 - vTC.y * 2, fDevDepth, 1.0f);

	float planeDist0 = max(dot(cv_BlendPlane0, vClipPos), 0);
	float planeDist1 = max(dot(cv_BlendPlane1, vClipPos), 0);
	
	OUT.Color = planeDist0 / max(planeDist0 + planeDist1, 1e-5);

	return OUT;
}

