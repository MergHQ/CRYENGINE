void Matrix_Inst_General(inout streamPos IN)
{
  // Instancing support
  int nInstance = 0;
#if %_RT_ENVIRONMENT_CUBEMAP
  nInstance = IN.nInstance;
#endif

  IN.InstMatrix = GetInstanceMatrix(nInstance);
}

