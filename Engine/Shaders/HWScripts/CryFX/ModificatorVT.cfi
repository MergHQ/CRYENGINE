{
#if %_RT_COMPUTE_SKINNING
	OUT.VertexID = IN.VertexID;
	OUT.Position = float4(SkinnedVertices[IN.VertexID].pos, 1.0f); 
#else 
	OUT.Position = float4(IN.Position.xyz, 1.0f); 
