// Vertex shaders for position
float4x4 GetInstanceMatrix(int nInstance=0)
{
  float4x4 Mat = float4x4( float4(1, 0, 0, 0),
                           float4(0, 1, 0, 0),
                           float4(0, 0, 1, 0),
                           float4(0, 0, 0, 1) );

#if !%_RT_OBJ_IDENTITY
  float3x4 objWorldMat = Get_SPI_ObjWorldMat(nInstance);
  Mat[0] = objWorldMat[0];
  Mat[1] = objWorldMat[1];
  Mat[2] = objWorldMat[2];
#endif

  return Mat;
}

